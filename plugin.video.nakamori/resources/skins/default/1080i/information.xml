<?xml version="1.0" encoding="UTF-8"?>
<window id="9999">
	<defaultcontrol always="true">9001</defaultcontrol>
	<coordinates>
		<posx>560</posx>
		<posy>340</posy>
	</coordinates>
	<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="300">WindowClose</animation>
	<controls>
        <!-- top-of-box -->
		<control type="group">
            <!-- box shape -->
			<control type="image">
				<description>background-panel-image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>800</width>
				<height>400</height>
				<texture>background-panel-image.png</texture>
			</control>
            <!-- box-title -->
			<control type="label">
				<description>header label</description>
                <top>10</top>
				<left>0</left>
				<width>736</width>
				<height>50</height>
                <label>$ADDON[plugin.video.nakamori 30008]</label>
				<align>center</align>
				<aligny>center</aligny>
				<font>font30</font>
				<textcolor>FFFFFFFF</textcolor>
			</control>
            <!-- box-close-x (if enablemouse)-->
			<control type="button">
				<description>close-information</description>
				<posx>736</posx>
				<posy>-32</posy>
				<width>64</width>
				<height>32</height>
				<onclick>PreviousMenu</onclick>
				<texturefocus>close-fo.png</texturefocus>
				<texturenofocus>close-nofo.png</texturenofocus>
				<visible>system.getbool(input.enablemouse)</visible>
			</control>
		</control>
        <!-- content -->
        <control type="scrollbar" id="301">
            <description>content scroll</description>
            <left>800</left>
            <top>120</top>
            <width>30</width>
            <height>280</height>
            <visible>true</visible>
            <orientation>vertical</orientation>
            <showonepage>false</showonepage>
            <texturesliderbackground>scroll-background.png</texturesliderbackground>
            <texturesliderbar>bar.png</texturesliderbar>
            <texturesliderbarfocus>bar-focus.png</texturesliderbarfocus>
            <textureslidernib>nib.png</textureslidernib>
            <textureslidernibfocus>nib-focus.png</textureslidernibfocus>
        </control>
        <control type="textbox" id="303">
            <description>content</description>
            <top>120</top>
            <left>10</left>
            <width>780</width>
            <height>280</height>
            <font>font12</font>
            <textcolor>AAFFFFFF</textcolor>
            <pagecontrol>301</pagecontrol>
        </control>
        <!-- bottom_button -->
		<control type="grouplist" id="9001">
			<posx>615</posx>
			<posy>310</posy>
			<width>200</width>
			<height>110</height>
			<align>center</align>
			<itemgap>20</itemgap>
			<orientation>vertical</orientation>
            <!-- save_button -->
			<control type="button" id="202">
				<description>Save</description>
				<width>170</width>
				<height>40</height>
				<align>center</align>
				<aligny>center</aligny>
				<label>$ADDON[plugin.video.nakamori 30009]</label>
				<textcolor>AABBBBBB</textcolor>
				<texturenofocus>button-nofo.png</texturenofocus>
				<texturefocus>button-fo.png</texturefocus>
				<font>font12_title</font>
				<textoffsetx>10</textoffsetx>
                <onclick>PreviousMenu</onclick>
			</control>
		</control>
	</controls>
</window>
